        <TextBox Height="23" TabIndex="200" HorizontalAlignment="Right" KeyDown="textBox2_KeyDown" TextChanged="textBox2_TextChanged" Margin="0,30,0,0" Name="textBox2" VerticalAlignment="Top" Width="154" />
        <sdk:Label Height="20" HorizontalAlignment="Left" Margin="8,5,0,0" Name="L1" Content="Логин: " FontWeight="SemiBold" VerticalAlignment="Top" Width="79" />
        <sdk:Label Height="20" HorizontalAlignment="Left" Margin="8,33,0,0" Name="L2" Content="Сервер:" FontWeight="SemiBold" VerticalAlignment="Top" Width="79" />
        
    </Grid>
</controls:ChildWindow>